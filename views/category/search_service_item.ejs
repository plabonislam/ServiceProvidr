<div class="uk-card uk-background-default">
  <div v-if="thumbstyle" class="uk-visible-toggle uk-position-relative">
    <div
      class="uk-card-media-top uk-background-cover"
      :data-src="item && item.images && item.images.length?item.images[0] : '../images/placeholder.png' "
      uk-img
    >
      <a :href="item && item.slug ? '/service/'+ item.slug: ''">
        <img
          :src=" item && item.images && item.images.length?item.images[0] : '../images/placeholder.png' "
          onError="this.onerror=null; this.src='../images/placeholder.png'; this.classList.remove('uk-invisible')"
          alt=""
          class="uk-invisible"
          uk-img
          alt=""
          uk-img
        />
      </a>
    </div>
    <!-- uk-card-media-top -->
  </div>
  <span class="uk-label uk-position-absolute">
    <a
      :href=" item && item.category && item.category.slug? '/search/'+ item.category.slug: ''"
    >
      {{ item.category ? item.category.name : "" }}
    </a>
  </span>
  <div class="uk-card-body uk-padding-small">
    <h3 class="uk-card-title uk-margin-remove-top">
      <a :href=" item &&  item.slug? '/service/'+ item.slug: ''">
        {{ item.title || "" }}
      </a>
    </h3>
    <p class="uk-text-emphasis uk-margin-small">
      {{ item && item.city && item.city.name ? item.city.name : "" }},
      {{ item && item.state && item.state.name ? item.state.name : "" }} |
      {{ item && item.distance ? item.distance : "" }}
    </p>
    <p class="uk-margin-remove-top compensation-area">
      Compansation : {{ item && item.compensation ? item.compensation : "" }}
    </p>
  </div>
  <!-- uk-card-body -->
  <div
    class="uk-margin-remove-left service-meta uk-child-width-expand  uk-grid"
  >
    <div class="uk-width-expand uk-padding-remove-left first-child">
      <div
        class="uk-grid-small uk-margin-remove uk-flex-middle uk-padding-small"
      >
        <div class="review uk-padding-remove">
          <span v-if="item && item.ranking">
            <i v-for="count in parseInt(item.ranking)" class="fa fa-star"></i>
            <i v-for="it  in  5-parseInt(item.ranking)" class="fa fa-star-o">
            </i>
          </span>
          <span v-if="item && !item.ranking">
            <i v-for="it  in  5" class="fa fa-star-o"> </i>
          </span>

          <p class="uk-text-meta uk-margin-remove uk-display-inline-block">
            ({{ item && item.ranking ? item.ranking : 0 }})
          </p>
        </div>
      </div>
    </div>
    <div class="uk-width-auto uk-padding-remove">
      <div class="hover-icon uk-text-center">
        <div class="hover-icon uk-text-center">
          <a
            class="uk-padding-small uk-display-inline-block"
            @click="updateFavItemByUser(item.id)"
            href="#"
          >
            <i v-if="item.isFav" class="fa fa-heart"></i>
            <i v-if="!item.isFav" class="fa fa-heart-o"></i>
          </a>
        </div>
      </div>
    </div>
    <div class="uk-width-auto uk-padding-remove">
      <div class="uk-text-center">
        <a class="uk-padding-small read-more uk-display-block" href="#"
          >Read More</a
        >
      </div>
      <!-- uk-text-center -->
    </div>
    <!-- uk-width-1-3@m -->
  </div>
  <!-- service-meta -->
</div>
<!-- uk-card -->
