<div class="uk-card uk-margin-top uk-background-default" >
        <div class="uk-visible-toggle uk-position-relative">
                <div class="uk-card-media-top">
                    <a :href="'/service/'+ item.slug">
                        <img data-src="images/placeholder.png" alt="" style="height:250px;" uk-img>
                    </a>
                  
                </div>
                <!-- uk-card-media-top -->
            </div>
            <!-- uk-visibilty -->
            
            <div class="uk-card-body uk-padding-small uk-margin-small-top">
                <h3 class="uk-card-title uk-margin-remove-top">
                    <a :href="'/service/'+ item.slug">
                    {{item.title}}
                </a>
                </h3>
                <p class="uk-text-emphasis uk-margin-small">
                    {{item.city.name}}, {{item.state.name}} | <del><del>Distance : {{ item && item.distance? item.distance:""}}km</del></del>
                </p>
                <p class="uk-margin-remove-top">Compansation : {{item.compensation}}</p>
            </div>
        <div class="uk-margin-remove-left service-meta uk-child-width-expand  uk-grid">
           <div class="uk-width-expand uk-padding-remove-left first-child">
              <div class="uk-grid-small uk-margin-remove uk-flex-middle uk-padding-small">
                <div class="review uk-padding-remove">
                    <p class="uk-text-meta uk-margin-remove uk-display-inline-block">
                      Rank {{ item.ranking }} hits {{ item.hits }}
                    </p>
                 </div>
                 <div class="service-items-rating" :data-ranking="item.ranking">
                    
                </div>
              </div>
           </div>
           <div class="uk-width-auto uk-padding-remove">
              <div class="hover-icon uk-text-center">
                   <div class="hover-icon uk-text-center">
                         <span @click="updateFavItemByUser(item.id)" class="user-favourite-item uk-padding-small read-more uk-display-block">
                             <i v-if="item.isFav" class="fa fa-heart"></i>
                             <i v-if="!item.isFav" class="fa fa-heart-o">
                                  
                                  <div id="modal-center" class="uk-flex-top" uk-modal>
                                        <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
                                    
                                            <button class="uk-modal-close-default" type="button" uk-close></button>
                                            <%- partial('../common/modallogin.ejs') %>
                                        </div>
                                     </div>                       
                                  
                             </i> 
                         </span>
                  </div>
                 <!-- <a class="uk-padding-small uk-display-inline-block" href="#"><i class="fa fa-heart-o"></i></a> -->
              </div>
           </div>
           <div class="uk-width-auto uk-padding-remove">
              <div class="uk-text-center">
                 <a class="uk-padding-small read-more uk-display-block" href="#">Read More</a>
              </div>
              <!-- uk-text-center -->
           </div>
           <!-- uk-width-1-3@m -->
        </div>
        <!-- service-meta -->
     </div>
     <!-- uk-card -->