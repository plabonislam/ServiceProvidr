<div id="forgot-password" class="uk-flex uk-flex-center uk-flex-middle uk-margin-large " >
  <div class="container uk-card uk-card-default uk-padding uk-width-1-3@m uk-width-5-6 uk-border-top " >
    <h1 class="uk-text-primary title uk-margin-remove-bottom uk-text-center">Recover password</h1>
    <div class="forgot-form" v-if="!cloudSuccess">
      <hr/>
      <h5 class="uk-text-center uk-text-muted">Enter your email address below to reset the password for your account.</h5>
      <hr/>
      <ajax-form action="sendPasswordRecoveryEmail" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
        <div class="uk-margin-small">
          <input type="email" name="email-address" class="uk-input" placeholder="sturgeon@example.com" :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress" autocomplete="email" focus-first>
          <div class="invalid-feedback uk-alert-warning uk-margin-small" v-if="formErrors.emailAddress">Please enter a valid email address.</div>
        </div>
        <p class="text-danger" v-if="cloudError"><small>An error occured while processing your request. Please check your information and try again, or <a href="/contact">contact support</a> if the error persists.</small></p>
        <div class="uk-margin-small">
          <ajax-button type="submit" :syncing="syncing" class="uk-button uk-button-secondary uk-border-pill">Send reset link</ajax-button>
        </div>
      </ajax-form>
      <p class="text-center"><a href="/login">Back to login</a></p>
    </div>
    <div class="success-message" v-if="cloudSuccess">
      <p>We've sent a link in your email to update your password.</p>
      <hr/>
      <p>If the email doesn’t arrive after a few minutes, try checking your spam folder.  If you still can’t find it, please try again, or <a href="/contact">contact support</a>.</p>
      <p class="text-center"><a class="uk-button uk-button-outline" href="/login">Back to login</a></p>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
