<div class="uk-margin-medium-bottom">
  <div class="uk-article">
    <div class="uk-card  uk-background-default">
      <div class="uk-visible-toggle uk-position-relative">
        <div class="uk-card-media-top">
          <a href="/service/<%= item.slug %>">
            <img src=" <%= item && item.images && item.images.length?item.images[0] : '../images/placeholder.png' %>"
              onError="this.onerror=null; this.src='../images/placeholder.png';" alt=""  uk-img>
          </a>
        </div>
        <!-- uk-card-media-top -->
      </div>
      <!-- uk-visibilty -->
      <span class="uk-label uk-position-absolute">
        <a href="/search/<%=  item && item.category && item.category.slug ? item.category.slug:"" %>">
          <%= item.category?item.category.name: "" %>
        </a>
      </span>
      <div class="uk-card-body uk-padding-small uk-margin-small-top">
        <h3 class="uk-card-title uk-margin-remove-top">
          <a href="/service/<%= item.slug %>">
            <%= item.title %>
          </a>
        </h3>
        <p class="uk-text-emphasis uk-margin-small">
          <%= item && item.city && item.city.name ? item.city.name : "" %>,
          <%= item && item.state && item.state.name ? item.state.name : ""  %> |
          <del><del><span class="sDistance">Distance : 2km</span></del></del>
        </p>
        <p class="uk-margin-remove-top">Compansation :
          <%= item && item.compensation ? item.compensation : ""  %>
        </p>
      </div>
    
          <!-- uk-card-body -->
          <div class="uk-margin-remove-left service-meta uk-child-width-expand uk-grid">
             <div class="uk-width-expand uk-padding-remove-left first-child">
                <div class="uk-grid-small uk-margin-remove uk-flex-middle uk-padding-small uk-grid">
                   <div class="review uk-padding-remove">
                      
                            <span class="service-items-rating" data-ranking="<%= item.ranking %>">
                            </span>
                            <p class="uk-text-meta uk-margin-remove uk-display-inline-block">(<%= item.ranking %>)</p>
                       
                   </div>
                </div>
             </div>
             <div class="uk-width-auto uk-padding-remove">
                <div class="hover-icon uk-text-center">
                   <a class="user-favourite-item uk-padding-small read-more uk-display-block" data-id="<%=item.id%>">
                   <i class="fa fa-heart-o"></i>
                   </a>
                  
                   <!--
                      <div :syncing="fvalue" data-id="<%=item.id%>" 
                          class="uk-button uk-button-link uk-padding-small uk-display-inline-block" @click="fav('<%=item.id%>')">
                      <a class="user-favourite-item uk-padding-small read-more uk-display-block" data-id="<%=item.id%>" @click="hotservices('<%=item.id%>')">
                           <span slot="syncing-state">   
                      <span v-if="fvalue">
                      <i class="fa fa-heart"></i>
                      </span>
                            <template v-else>
                               <span>
                      <i class="fa fa-heart-o"></i>
                      </span>
                           </template>
                          </span>
                      </div>
                      -->
          </div>
        </div>
        <div class="uk-width-auto uk-padding-remove">
          <!--  update 1-->
          <div class="uk-text-center">
            <a class="uk-padding-small read-more uk-display-block" href="/service/<%=item.slug%>">Read More</a>
          </div>
          <!-- uk-text-center -->
        </div>
        <!-- uk-width-1-3@m -->
      </div>
      <!-- service-meta -->
    </div>
    <!-- uk-card -->
  </div>
  <!-- uk-article -->
</div>
<!-- uk-width-1-3@m -->
